<html>
    <head>
        
    </head>
    <body>
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <table class="table table-hover table-bordered table-dark table-striped bg-dark">
                        <tr>
                            <th>S.No.</th>
                            <th>Full Name</th>
                            <th>Username</th>
                            <th>City</th>    
                            <th>Gender</th> 
                            <th>Address</th>
                            <th>Delete</th>
                            <th>Edit</th>
                        </tr>
                        <% result.forEach(function(user, n){ %> 
                        <tr>
                            <td><%= n+1 %></td>
                            <td><%= user.name  %></td>
                            <td><%= user.username %></td>
                            <td><%= user.city %></td>
                            <td><%= user.gender %></td>
                            <td><%= user.address %></td>
                            <td><a href="/userInfo/edit/<%= user._id %>" class="btn btn-warning btn-sm">Edit</a></td>
                            <td><a href="/userInfo/delete/<%= user._id %>" class="btn btn-danger btn-sm">Delete</a></td>
                        </tr>

                        <% }) %>

                    </table>
                </div>
            </div>
        </div>
    </body>
</html>
