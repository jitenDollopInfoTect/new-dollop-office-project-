
<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            
            <form action="" method="post" enctype="multipart/form-data">
                <div class="card">
                    <div class="card-header">
                        <h3>Share File With Your Friends</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" disabled class="form-control" value="<%= result.name %>" name="file_name" />
                            <input type="hidden" class="form-control" value="/share/<%= result._id %>" name="file_id" />
                        </div>
                        <div class="form-group">
                            <label>Share File (Email-Id)</label>
                            <input type="text" class="form-control" name="share_email" placeholder="Please Inter Email Address"/>
                            <p class="text-danger"><%= message %></p>
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" class="btn btn-primary" value="Send">
                    </div>
                </div>
            </form>
            
        </div>
    </div>
</div>

